#!/usr/bin/env php
<?php

chdir(__DIR__);

require_once __DIR__ . '/vendor/autoload.php';
require_once __DIR__ . '/src/Core/Env.php';
require_once __DIR__ . '/src/Core/Logger.php';
require_once __DIR__ . '/src/Core/Database.php';
require_once __DIR__ . '/src/Core/Auth.php';
require_once __DIR__ . '/src/Core/Request.php';
require_once __DIR__ . '/src/Core/Response.php';
require_once __DIR__ . '/src/Core/MiddlewarePipeline.php';
require_once __DIR__ . '/src/Core/Container.php';
require_once __DIR__ . '/src/Core/ErrorHandler.php';
require_once __DIR__ . '/src/Core/Router.php';
require_once __DIR__ . '/src/Core/Kernel.php';
require_once __DIR__ . '/src/Core/helper.php';
require_once __DIR__ . '/src/Controllers/AuthController.php';
require_once __DIR__ . '/src/Controllers/DashboardController.php';
require_once __DIR__ . '/src/Controllers/PageController.php';
require_once __DIR__ . '/src/Controllers/PaymentController.php';

Env::load(__DIR__ . '/.env');
Logger::register();
$errorHandler = new ErrorHandler();
$errorHandler->register();
Auth::startSession();

$kernel = new Kernel();
$command = $argv[1] ?? 'help';

$commands = [
    'routes' => 'List registered HTTP routes',
    'health' => 'Quick health check (DB connection)',
    'env' => 'Show loaded environment snapshot',
    'help' => 'Show this help message',
];

switch ($command) {
    case 'routes':
        $routes = $kernel->router()->all();
        foreach ($routes as $method => $items) {
            foreach ($items as $route) {
                $handler = is_array($route['handler'])
                    ? (is_object($route['handler'][0]) ? get_class($route['handler'][0]) : $route['handler'][0]) . '@' . $route['handler'][1]
                    : (is_string($route['handler']) ? $route['handler'] : '[closure]');
                echo str_pad($method, 6) . ' /' . ($route['pattern'] === '' ? '' : $route['pattern']) . ' -> ' . $handler . PHP_EOL;
            }
        }
        break;
    case 'health':
        echo "Checking database connection... ";
        try {
            Database::getConnection()->query('SELECT 1');
            echo "OK" . PHP_EOL;
            exit(0);
        } catch (Throwable $e) {
            echo "FAIL" . PHP_EOL;
            fwrite(STDERR, $e->getMessage() . PHP_EOL);
            exit(1);
        }
    case 'env':
        $configFile = __DIR__ . '/src/config/config.php';
        $config = is_file($configFile) ? require $configFile : [];
        echo "APP_BASE_URL: " . ($config['base_url'] ?? '-') . PHP_EOL;
        echo "DB_HOST: " . (getenv('DB_HOST') ?: ($config['db']['host'] ?? '-')) . PHP_EOL;
        echo "DB_NAME: " . (getenv('DB_NAME') ?: ($config['db']['name'] ?? '-')) . PHP_EOL;
        echo "DB_USER: " . (getenv('DB_USER') ?: ($config['db']['user'] ?? '-')) . PHP_EOL;
        echo "MIDTRANS_MERCHANT_ID: " . (getenv('MIDTRANS_MERCHANT_ID') ?: '-') . PHP_EOL;
        break;
    default:
        echo "aitictl commands:" . PHP_EOL;
        foreach ($commands as $name => $desc) {
            echo "  - " . str_pad($name, 8) . $desc . PHP_EOL;
        }
        echo PHP_EOL . "Examples:" . PHP_EOL;
        echo "  php aitictl routes" . PHP_EOL;
        echo "  php aitictl health" . PHP_EOL;
        exit(0);
}
